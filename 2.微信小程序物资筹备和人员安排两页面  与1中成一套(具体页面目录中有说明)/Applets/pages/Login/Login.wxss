/* pages/Reserve/Reserve.wxss */
@import "/pages/template/template.wxss";
/*公用样式*/
.bgred{
  background: #FF2323 !important;
}
.red{
  color: #FF2323 !important;
}
/*设置背景图  */
.backimage{
  width: 100%;
  height:100%;
  position: fixed;
  top:0;
  z-index: -1;
}
/*用户的基本信息*/
.userInfo{
  color: #fff;
  padding: 70rpx 70rpx 70rpx;
  font-size: 16px;
}
.userInfo .txImage{
  width: 50px;
  height: 50px;
  border-radius: 100px;
}
.userInfo .uname{
  font-size: 18px;
  margin: 45rpx  auto 20rpx;
}
/*下一步-按钮*/
.nextBtn{
  width: 450rpx;
  text-align: center;
  margin: auto;
  border-radius:100px;
  background: rgba(255,255,255,0.8);
  color:#fff;
}
.loginView{
  font-family: 'MicrosoftYaHei';
}
.step1, .step2{
  text-align: center;
  color: #fff;
}
.step1 .phoneBox,.step2 .youKeBox, .step2 .keHuBox{
  width: 450rpx;
  color: #fff;
  font-size: 15px;
  padding: 0rpx 0rpx 0rpx 0rpx;
  margin:80rpx auto 150rpx;
  text-align:left;
  position: relative;
}
.step1 .phoneBox input{
  border-bottom:1px solid #fff;
  padding-left: 40rpx;
  padding-bottom: 15rpx;
}
.step1 .phoneBox .tips{
  font-size: 14px;
  margin:20rpx auto;
  color: #ddd;
  height: 16px;
  /* padding-left:40rpx; */
}
.step2 .itemView{
  color: #ddd;
  position: relative;
  padding: 30rpx 0rpx 20rpx 40rpx;
  border-bottom: 1px solid #fff;
}

.step2 .icon-dian{
  position: absolute;
  left: 0px;
  top: 18px;
}
.step2 .icon-user{
  position: absolute;
  left: 0px;
  top: 18px;
}
.step2 .inputName{
  width: 120px;
}
.step2 .inputYZM{
  width: 250rpx;
}
.step2 .sexBox,.step2 .yzmBox{
  position: absolute;
  right: 0;
  top: 15px;
  border: none !important;
  border-left:1px solid #ddd;
  width: 200rpx;
  text-align: right;
}
.step2 .sexBox button,.step2 .keHuBox .getYZM{
  background: transparent;
  display: inline;
  line-height: 0;
  border: 0px !important;
  color: #fff;
  font-size: 14px;
  padding: 0px 10rpx;
}
.step2 .keHuBox .getYZM{
  color: #ddd;
}
.step2 .tips{
  font-size: 14px;
  margin-top:5px;
  height:16px;
}
.icons{
  width: 30rpx;
  height: 30rpx;
}
.icon-phone{
  position: absolute;
  top: 4px;
  left:0rpx;

}
.yzmTips{
  font-size:14px;
  margin-top:15rpx;
  color:#ddd;
  height: 16px;
}
/*底部提示*/
.bottom_tips{
  color: #CCCCCC;
  text-align: center;
  font-size: 14px;
  position: absolute;
  bottom: 80px;
  width: 100%;
}
/*获取电话号码*/
.getPhoneMask {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 111111;
}

.getPhoneMask .my_content1 {
  position: relative;
  top: 50%;
  transform: translateY(-50%);
  width: 70%;
  background-color: #fff;
  font-size: 28rpx;
  text-align: center;
  margin: 0 auto;
  border-radius: 10rpx;
}
.getPhoneMask .btn-group{
  padding: 0px;
  border-radius:0px 0px 10px 10px;
}
.getPhoneMask .title {
  padding: 40rpx 0;
  color: #999999;
}

.getPhoneMask .btn-group {
  /* padding: 30rpx 0; */
  border-top: 1px solid #bbb;
}

.getPhoneMask .btn-group button {
  width:100%;
  text-align: center;
  background-color: #fff;
  font-size: 30rpx;
  line-height: normal;
  padding: 30rpx 0;
}

.getPhoneMask button[class="cancle_"]::after {
  border: 0;
}
.getPhoneMask button[class="isOK_"]::after {
  border: 0;
}

.getPhoneMask .cancle_ {
  width: 50%;
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
  border-right: 1px solid #CCC; 
}

.getPhoneMask .isOK_ {
  width: 50%;
  border: none !important;
}

.getPhoneMask .tips_view .tips_title{
  padding:30px;
  font-size:16px;
}
