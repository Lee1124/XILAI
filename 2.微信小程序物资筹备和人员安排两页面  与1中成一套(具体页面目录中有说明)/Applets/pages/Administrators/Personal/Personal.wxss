/* pages/Administrators/Personal/Personal.wxss */
@import "/pages/template/template.wxss";

page{
    background-color: #eee;
}
.box_1{
    height:421rpx;   
    /* background:url(../../../images/bg_1.png);  */
    position: relative;
    padding: 1px 0px;
}
.box_1 .bg_1{
    position: absolute;
    top: 0px;
    left: 0px;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
}
.box_1 .go_out{
    position: absolute;
    padding: 53rpx 26rpx 0px 0px;
    top: 0px;
    right: 0px;
    font-size:28rpx;
    color:rgba(255,255,255,1);
    z-index: 1;
}
.box_1 .Head_portrait{
    width:112rpx;
    height:112rpx;
    margin: 87rpx auto 37rpx;
    border-radius: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    z-index: 1;
    background: #eeeeee;
    font-size: 12px;
}
.box_1 .Head_portrait>image{
    width: 100%;
    height: 100%;
    border-radius: 100%;
}
.box_1 .user_name{
    font-size:32rpx;
    color:rgba(255,255,255,1);
    margin: 37rpx 0px 0p;
    text-align: center;
    position: relative;
    z-index: 1;
}
.box_2{
    position: relative;
    height: 90rpx;
    background: #ffffff;
}
.box_2>view{
    position: absolute;
    width:640rpx;
    height:165rpx;
    padding: 36rpx 0px 0px 0px;
    box-sizing: border-box;
    margin: 0px auto;
    /* bottom: -63rpx; */
    bottom: 27rpx;
    left: 0px;
    right: 0px;
    background:rgba(255,255,255,1);
    border-radius:5rpx;
    box-shadow:0px 0px 18rpx rgba(0,0,0,0.09);
    display: flex;
    text-align: center;
}
.box_2>view>view{
    width: 33.3%;
}
.box_2>view>view>view:nth-child(1){
    color: #555555;
    font-size: 30rpx;
    margin: 0px 0px 30rpx 0px;
}
.box_2>view>view>view:nth-child(2){
    color: #FF002A;
    font-size: 26rpx;
}

.box_3{
    padding: 0rpx 20rpx 0px 20rpx;
    background: #ffffff;
}
.box_3 navigator{
    display: flex;
    height: 107rpx;
    align-items: center;
    border-bottom: 1px solid rgba(221,221,221,1);
}
.box_3 navigator>view:nth-child(1){
    width: 44rpx;
    height: 44rpx;
    /* border:1px dashed #cccccc; */
    display: flex;
}
.box_3 navigator>view:nth-child(1) image{
    width: 100%;
    height: 100%;
}
.box_3 navigator>view:nth-child(2){
    flex-grow: 1;
    margin: 0px 0px 0px 27rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.box_3 navigator>view:nth-child(2)>view:nth-child(1){
    color: #222222;
    font-size: 28rpx;
}
.box_3 navigator>view:nth-child(2)>view:nth-child(2){
    color: #666666;
    font-size: 28rpx;
}
.box_3 navigator>view:nth-child(2) image{
    width: 17rpx;
    height: 30rpx;
}