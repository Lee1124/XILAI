/* pages/Administrators/MyFlow/MyFlow.wxss */
.kong{
    text-align:center;
    margin:100px 0px 0px;
    font-size:12px;
}
.loading{
    padding: 40rpx 0px;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 24rpx;
}
.loading image{
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx
}

.header_1{
    height:86rpx;
    border-bottom: 1px solid rgba(221,221,221,1);
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0px 20rpx;
}
.header_1>view:nth-child(1){
    font-size: 28rpx;
    color: #222222;
}
.header_1>view:nth-child(1)>text:nth-child(2){
    color: #FF0000;
}
.header_1>view:nth-child(2){
    font-size: 24rpx;
    color: #222222;
}
.header_1 .left_1{
    width:17rpx;
    height:30rpx;
}


.title_1{
    height: 88rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0px 23rpx 0px 20rpx;
    border-bottom: 1px solid rgba(221,221,221,1);
    margin:auto 20rpx;
}
.title_1>view:nth-child(1)>text:nth-child(1){
    color: #222222;
    font-size: 28rpx;
}
.title_1>view:nth-child(1)>text:nth-child(2),
.title_1>view:nth-child(2)>text:nth-child(2){
    color: #FF0000;
    font-size: 24rpx;
}
.title_1>view:nth-child(2){
    color: #666666;
    font-size: 24rpx
}
.list_1 .list_2{ 
    /* max-height: 0px; */
}
.list_1.active .list_2{ 
    /* max-height: 100px; */
}
.list_2{
    padding:  0px 23rpx 0px 20rpx;
    overflow: hidden;
    transition: all 0.3s;
    border-bottom:1.5px solid rgba(221,221,221,1);
}
.list_2>view{
    border-bottom: 1px dashed rgba(221,221,221,1);
    height: 88rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #222222;
    font-size: 28rpx;
}
.list_2>view:last-child{
  border: 0px !important;
}
.list_2>view .image_box{
    width:50rpx;
    height:50rpx;
    margin: 0px 20rpx 0px 0px;
    background: #eeeeee;
}
.list_2>view .image_box>image{
    width: 100%;
    height: 100%;
}
.list_2 .username{
    flex-grow: 1;
}
.list_2 .time_1{
    font-size: 24rpx;
    color: #999999;
}
.list_2 .userInfo{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.list_2 .userInfo .username{
  flex: 1;
}
.name_{
  margin-right: 4px;
}
.userIdenriry{
  font-size: 12px;
}
.orange{
  color: #FF6600
}
.green{
  color: #26B300
}
.blue{
  color: #0081DC
}
.gray{
  color: #bb9860
}
