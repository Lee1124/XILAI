image{
  width: auto;
  height:auto;
}
view,image{
  box-sizing: border-box;
}
.ellipsis{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.ellipsis3{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.wrap{
  /* padding: 20rpx 25rpx; */
  color:#222222;
  overflow-x: hidden;
  overflow-y: auto;
}
.font-s14{
  font-size: 12px;
}
.color999{
  color: #999999;
}
.paddingL{
  /* padding-left: 12px; */
  /* margin-left: 12px; */
}
.border_b{
  border-bottom:1px solid #efefef;
}
.title_{
  font-size:16px;
  color:#BB9860;
  border-bottom:1px solid #efefef;
  padding:0 0 20rpx 0px;
  margin: auto 25rpx;
}
.info_{
  line-height:30px;
  font-size:14px;
  padding:20rpx 0;
  margin: auto 25rpx;
}
.border2{
  border:2px solid #efefef;
}
.point{
  border-radius: 100px;
  width: 7px;
  height: 7px;
  background: #CCCCCC;
  display: inline-block;
}

/*个人信息*/
/*浏览足迹*/
.browseContent{
  padding-top:30rpx;
  padding-bottom: 50px;
}
.browseContent .contents{
  padding: 20rpx 20rpx 0rpx 20rpx;
  line-height: 30px;
  font-size: 15px;
}
.browseContent .contents .words{
  margin:15rpx auto;
}
.contents .tit_lab{
  padding-left:7px;
  vertical-align:middle;
  color:#BB9860;
}
.contents .itemBox{
  width:100%;
  display:flex;
  flex-wrap:nowarp;
  flex-direction:row;
  box-sizing:border-box;
  /* overflow-x:scroll; */
}
.contents .itemBox .item{
  width:153px !important;
  height: 135px;
  flex: none;
  margin-right: 10px;
  margin-bottom:10px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  border-radius: 3px;
  border: 1px solid #efefef;
  line-height: 18px;
  position: relative;
}
.contents .itemBox .item image{
  width: 100%;
  display: block;
  flex: 1;
  border-radius: 3px;
  /* border: 1px solid #efefef; */
}
.contents .itemBox .item .itemLab{
  padding: 3px 5px;
  font-size: 12px;
}
.tit_{
  border-bottom: 0px !important;
  padding-bottom: 5rpx !important;
  margin-left: 0px !important;
}
.contentWords{
  font-size:14px;
  line-height: 25px;
  padding-left: 50rpx;
}
/*经典案例*/
.zxal{
  display: flex !important;
  height: 90px !important;
}
.zxal .itemLab{
  font-size: 14px !important;
}
.zxal .wordLeft{
  font-size: 12px;
}
.zxal .left_right{
  flex: 1;
  display:flex;
  flex-direction:row;
  padding:0px 10rpx 10rpx;
}
.zxal .left_right .wordLeft{
  width:70px;
  padding:3px 0;
  font-size:0.6rem;
  letter-spacing:0px;
}
.zxal .left_right image{
  flex: 1;
}

/*加入黑名单*/
.addBlackBtn{
    position: fixed;
    bottom: 0rpx;
    left: 0;
    width: 100%;
    height: 40px;
    background:#EB8778;
    line-height: 80rpx;
    text-align: center;
    color:#fff;
    font-size: 28rpx;
    z-index:99999;
}
.myVideo{
  position: absolute;
  left:0;
  bottom:0;
  right: 0;
  top:0;
  width:auto;
  height:auto;
  filter:alpha(opacity=0);
  -moz-opacity:0;
  -khtml-opacity:0;
  opacity: 0;
}
.noContent{
  padding:30% 0;
  text-align:center;
  color:#ccc;
  font-size:14px;
  letter-spacing:1px;
}