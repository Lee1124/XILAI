/* pages/changeMaterialManage/changeMaterialManage.wxss */

.changePage {
  box-sizing: border-box;
  position: absolute;
  top: 0;
  bottom: 0;
  width: 100%;
}

.changePage_inner_top {
  padding: 30rpx;
}

.changePage_inner {
  display: flex;
  flex-wrap: nowrap;
  font-size: 28rpx;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  padding: 25rpx 0;
}

.changePage_inner .picker {
  color: #000;
}

.changePage_inner:nth-child(1) {
  padding-top: 0;
}

.changePage_inner_last {
  border: 0;
}

.changePage_inner text {
  color: #666;
  flex-basis: 20%;
}

.changePage_inner_textarea {
  font-size: 28rpx;
  padding: 25rpx 0;
}

.changePage_inner_textarea text {
  color: #666;
}

.changePage_inner_textarea textarea {
  width: 100%;
  height: 150rpx;
  padding: 20rpx 0;
  box-sizing: border-box;
  color: #222;
}

.changePage_inner picker, .changePage_inner input {
  flex-basis: 80%;
  color: #222;
}

/* 保存按钮 */
.yesBtnBox {
  background: #f3f2f7;
  padding-top: 135rpx;
  box-sizing: border-box;
  position: absolute;
  top: 468.5rpx;
  bottom: 0;
  width: 100%;
}

.yesBtnBox button {
  width: 590rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: #cd1130;
  color: #fff;
  font-size: 28rpx;
  border-radius: 44rpx;
}
