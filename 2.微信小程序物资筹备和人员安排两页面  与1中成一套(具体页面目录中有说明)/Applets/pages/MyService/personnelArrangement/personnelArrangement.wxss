/* pages/ personnelArrangement/ personnelArrangement.wxss */

.personnel-page {
  padding: 20rpx 0;
}

.baseNews-title, .personnelNews-title {
  height: 80rpx;
  line-height: 80rpx;
  background: #f2f2f2;
  text-align: center;
  position: relative;
  font-size: 35rpx;
  color: #222;
}

.baseNews-title image, .personnelNews-title image {
  position: absolute;
  width: 32rpx;
  height: 32rpx;
  right: 30rpx;
  top: 50%;
  margin-top: -14rpx;
  transition: all 0.2s;
}

.baseNews-content {
  padding: 0 30rpx;
  background: #fafafa;
  transition: all 0.3s;
  box-sizing: border-box
}

.baseNews-content-inner {
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  font-size: 30rpx;
  height: 85rpx;
  line-height: 85rpx;
  border-bottom: 1rpx solid #eee;
}

.baseNews-content-inner view:nth-child(1) {
  flex-basis: 25%;
  color: #777;
}

.baseNews-content-inner view:nth-child(2) {
  flex-basis: 75%;
  color: #222;
}

.baseNews-content-inner-last {
  justify-content: center;
  border: 0;
}

.baseNews-content-inner image {
  width: 20rpx;
  height: 22rpx;
  margin-right: 15rpx;
  transition: all 0.2s;
}

.baseNews-content-inner text {
  font-size: 28rpx;
  color: #bbb;
}

.personnelNews-content {
  padding: 0 50rpx;
  background: #fafafa;
  box-sizing: border-box;
  transition: all 0.4s;
}

.personnelNews-content-inner {
  border: 1rpx solid #e9e9e9;
  padding: 0 25rpx;
  margin-top: 15rpx;
  background: #fff;
}

.personnelNews-content-inner-text {
  display: flex;
  flex-wrap: nowrap;
  /* align-items: center; */
  font-size: 28rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}
.personnelNews-content-inner-text:last-child{
  border: 0;
}

.personnelNews-content-inner-text-last {
  color: #cd1130;
  justify-content: center;
  border: 0;
}

.personnelNews-content-inner-text view:nth-child(1) {
  flex-basis: 18%;
  color: #777;
}

.personnelNews-content-inner-text view:nth-child(2) {
  flex-basis: 82%;
  color: #222;
}

/* 编辑图标 */

