page{
  background-image: url('https://xilai99.com/image/img/xlBg.png');
  background-position: no-position;
  background-size: contain;
}
view, image{
  box-sizing: border-box;
}
.color999{
  color:#999999 !important;
}
.color666{
  color:#666666 !important;
}
