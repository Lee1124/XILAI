.wrapper .content{
  width: 300px;
  height: 485px;
  position: absolute;
  left: 0;
  bottom: 0;
  top: -50px;
  right: 0;
  margin: auto;
  background: rgba(255,255,255,0.9);
  font-size: 12px;
  color: #666666;
  text-align: center;
  line-height: 22px;
  padding:25px 0;
  letter-spacing: 1px;
  box-shadow:0px 0px 10px 0px rgba(0, 0, 0, 0.1);
}
.wrapper .txImage{
  width: 50px;
  height: 50px;
  border-radius: 100px;
  display: inline-block;
}
.uname{
  margin: 10px auto 10px;
}
